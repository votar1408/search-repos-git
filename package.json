{
    "name": "search-repos-git",
    "version": "0.1.0",
    "private": true,
    "description": "Test task: app that search repos in Github by name",
    "keywords": [
        "search",
        "git",
        "repository",
        "test"
    ],
    "author": "Valentyn Ratov",
    "license": "ISC",
    "scripts": {
        "start": "cross-env PORT=3000 react-scripts start",
        "build": "react-scripts build",
        "lint": "eslint --no-error-on-unmatched-pattern --debug src/",
        "lint:write": "eslint --debug --no-error-on-unmatched-pattern src/ --fix",
        "prettier": "prettier --write src/**/*.(ts|tsx)"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts|tsx)": [
            "npm run lint:write",
            "git add"
        ]
    },
    "dependencies": {
        "@types/react": "^16.9.46",
        "@types/react-dom": "^16.9.8",
        "@types/react-redux": "^7.1.9",
        "@types/react-router-dom": "^5.1.5",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.1",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.1",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "typescript": "^3.9.7"
    },
    "devDependencies": {
        "@types/redux-logger": "^3.0.7",
        "cross-env": "^7.0.2",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "node-sass": "^4.14.1",
        "prettier": "^2.0.5",
        "redux-logger": "^3.0.6"
    }
}
